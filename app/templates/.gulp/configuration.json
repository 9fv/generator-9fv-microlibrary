{
  "author": {
    "name": "<%- author.name %>",
    "url": "<%- author.url %>"
  },
  "workInProgress": true,
  "node": {
    "version": "<%- node.version %>"
  },
  "sources": {
    "path": "lib/",
    "pattern": "**/*.js"
  },
  "tests": {
    "path": "test/",
    "pattern": "**/*.test.js"
  },
  "templates": {
    "basepath": ".templates",
    "files": {
      "API": "API.md.hbs",
      "README": "README.md.mustache",
      "CREDITS": "CREDITS.md.mustache",
      "USAGE": "USAGE.md.mustache"
    },
    "partials": {
      "basepath": ".templates/API",
      "pattern": "**/*.hbs"
    }
  },
  "gulp": {
    "tasks": {
      "path": ".gulp/tasks",
      "pattern": "**/*.js"
    }
  }
}
